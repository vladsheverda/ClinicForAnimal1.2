@model ClinicForAnimal1._2.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>

<body>
    <div class="login">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Главная страница","Index","Account")</li>
                        <li>@Html.ActionLink("Календар", "Index", "Home")</li>
                        <li>@Html.ActionLink("Доктора", "ShowInfoDoctor", "DoctorInfo")</li>
                        <li>@Html.ActionLink("Услуги и цены", "Categories", "VeterinarianServices")</li>
                        <li>@Html.ActionLink("Отзывы", "Index", "Reviews")</li>
                        <li>@Html.ActionLink("Администрирование", "InfoForAdmin", "Admin")</li>
                        <li>@Html.ActionLink("Информация для врачей", "Index", "AddDoctors")</li>
                        <li>@Html.ActionLink("Информация о карточке пациента", "InfoForPatient", "CartForPatient")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <p>
        <h4>Регистрация пользователя</h4>
    </p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>


            @Html.ValidationSummary(false)

            <div>
                Электронный адрес
                <div>
                    @Html.EditorFor(model => model.Email)
                </div>
            </div>

            <div>
                Год рождения
                <div>
                    @Html.EditorFor(model => model.Age)
                </div>
            </div>

            <div>
                Пароль
                <div>
                    @Html.EditorFor(model => model.Password)
                </div>
            </div>

            <div>
                Подтвердить пароль
                <div>
                    @Html.EditorFor(model => model.PasswordConfirm)
                </div>
            </div>

            <div>
                <div>
                    <input type="submit" value="Зарегистрировать" />
                </div>
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>