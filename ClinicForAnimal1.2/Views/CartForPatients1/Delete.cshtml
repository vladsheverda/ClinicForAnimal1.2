@model ClinicForAnimal1._2.Models.PatientCart.CartForPatient

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>CartForPatient</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Диагноз")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Diagnosis)
            </dd>

            <dt>
                @Html.Label("Лечение")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Treatment)
            </dd>

            <dt>
                @Html.Label("Номер пациента")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IdPatient)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Вернуться к списку карточек", "Index")
            </div>
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
